# Server
PORT=5000
NODE_ENV=development

# API Keys
# Gemini Developer API key (for AI features)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI key (for audio transcription/tts; optional with graceful fallback)
OPENAI_API_KEY=your_openai_api_key_here

# Reserved for future AI integrations

# Redis cache (optional; falls back to in-memory cache if unset)
REDIS_URL=redis://localhost:6379

# Scheduler
SCHEDULER_ENABLED=true
SCHEDULER_POLL_MS=30000
SCHEDULER_TZ=UTC

# Social OAuth (optional)
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_REDIRECT_URI=
# Social OAuth (optional, for future provider integrations)
# TWITTER_CLIENT_ID=
# TWITTER_CLIENT_SECRET=
# FACEBOOK_APP_ID=
# FACEBOOK_APP_SECRET=
# LINKEDIN_CLIENT_ID=
# LINKEDIN_CLIENT_SECRET=
# INSTAGRAM_APP_ID=
# INSTAGRAM_APP_SECRET=
# DISCORD_WEBHOOK_URL= # for direct server-side posting via webhook


# API.Bible (Scripture API)
BIBLE_API_KEY=your_api_bible_key_here
# Default Bible ID (NIV). Examples:
# NIV: de4e12af7f28f599-02
# ESV: 06125adad2d5898a-01
BIBLE_DEFAULT_ID=de4e12af7f28f599-02

# Auth & CORS
# If true, API routes under /api require a logged-in session (except /auth, /share, /bibles, /health/healthz)
REQUIRE_AUTH=false
# Comma-separated list of allowed origins in production (e.g. https://app.yourdomain.com,https://www.yourdomain.com)
# In development, if unset, the server reflects the request origin for convenience.
CORS_ORIGIN=
